{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch ach-dump",
      "program": "${workspaceFolder}/src/scripts/ach-dump/main.ts",
      "args": ["./ach/incoming/ACH Return Sample.txt"],
      "outputCapture": "std",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "runtimeVersion": "default",
      "stopOnEntry": true,
      "cwd": "${workspaceFolder}",
      "showAsyncStacks": true,
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "${workspaceFolder}",
        "GOOGLE_CLOUD_PROJECT": "rfi-warehouse",
        "GOOGLE_APPLICATION_CREDENTIALS": "~/.config/gcloud/application_default_credentials.json"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Setup Dev Data Environment",
      "program": "${workspaceFolder}/src/test-helpers/scripts/setup_dev.ts",
      "outputCapture": "std",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "stopOnEntry": true,
      "cwd": "${workspaceFolder}",
      "showAsyncStacks": true,
      "env": {
        "NODE_PATH": "${workspaceFolder}"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test", "${workspaceFolder}/test/**/*.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Banking Program",
      "program": "${workspaceFolder}/src/server/start.ts",
      "outputCapture": "std",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "runtimeVersion": "default",
      "stopOnEntry": true,
      "cwd": "${workspaceFolder}",
      "showAsyncStacks": true,
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "${workspaceFolder}",
        "GOOGLE_CLOUD_PROJECT": "rfi-warehouse",
        "GOOGLE_APPLICATION_CREDENTIALS": "~/.config/gcloud/application_default_credentials.json",
        "NODE_EXTRA_CA_CERTS": "/usr/local/etc/ssl/cacert.pem"
      }
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--detectOpenHandles",
        "--runInBand",
        "--forceExit",
        "--coverage",
        "false"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_PATH": "${workspaceFolder}",
        "NODE_ENV": "test",
        "NODE_EXTRA_CA_CERTS": "/usr/local/etc/ssl/cacert.pem"
      },
      "smartStep": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${relativeFile}",
        "--maxWorkers=1",
        "--forceExit",
        "--detectOpenHandles",
        "--coverage",
        "false"
      ],
      "env": {
        "NODE_PATH": "${workspaceFolder}",
        "NODE_ENV": "test",
        "NODE_EXTRA_CA_CERTS": "/usr/local/etc/ssl/cacert.pem"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "smartStep": false
    }
  ]
}
